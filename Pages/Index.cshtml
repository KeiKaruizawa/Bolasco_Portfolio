@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="hero-banner">
    <div class="hero-content">
        <h1>LEAH BOLASCO</h1>
        <h2>UI/UX DESIGNER · FRONT-END DEVELOPER · CREATIVE MAKER</h2>

        <p class="hero-sub">
            Passionate about crafting intuitive digital experiences and designing pastel, book-themed collectibles.
        </p>

        <div class="hero-buttons">
            <a href="/Portfolio" class="btn-primary">View Portfolio</a>
            <a href="/Product" class="btn-secondary">Shop Pins & Stickers</a>
        </div>
    </div>

    <div class="hero-image">
        <img src="~/Images/pfpbanner.png" alt="Profile Image">
