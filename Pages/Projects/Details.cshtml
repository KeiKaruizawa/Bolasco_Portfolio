@page
@model BolascoProel4.Pages.Projects.DetailsModel

@{
    ViewData["Title"] = "Project Details";
    Layout = "_Layout";
}

<style>
    .details-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 0;
        margin: -2rem -15px 2rem -15px;
        border-radius: 0 0 30px 30px;
    }

    .details-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .project-image-container {
        text-align: center;
        margin-bottom: 2rem;
        background: #f7fafc;
        padding: 2rem;
        border-radius: 15px;
    }

    .project-image {
        max-height: 500px;
        width: auto;
        max-width: 100%;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    .detail-row {
        padding: 1rem 0;
        border-bottom: 1px solid #e2e8f0;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-weight: 700;
        color: #667eea;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        color: #2d3748;
        font-size: 1.1rem;
        margin-top: 0.3rem;
    }

    .btn-edit-detail {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        font-weight: 600;
    }

        .btn-edit-detail:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
            color: white;
        }
</style>

<div style="padding-top:120px;"></div>

<div class="details-header text-center">
    <div class="container">
        <h1 class="display-5 fw-bold">Project Details</h1>
        <p class="lead">View complete project information</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="details-card">
                @if (Model.Project.ImageData != null && Model.Project.ImageData.Length > 0)
                {
                    <div class="project-image-container">
                        <img src="@Url.Page("../Projects/Index", "Image", new { id = Model.Project.ProjectId })"
                             class="project-image"
                             alt="@Model.Project.Title" />
                    </div>
                }

                <div class="detail-row">
                    <div class="detail-label">Project Title</div>
                    <div class="detail-value">@Model.Project.Title</div>
                </div>

                <div class="detail-row">
                    <div class="detail-label">Description</div>
                    <div class="detail-value">@Model.Project.Description</div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Project.TechnologyUsed))
                {
                    <div class="detail-row">
                        <div class="detail-label">Technologies Used</div>
                        <div class="detail-value">@Model.Project.TechnologyUsed</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Project.ProjectUrl))
                {
                    <div class="detail-row">
                        <div class="detail-label">Project URL</div>
                        <div class="detail-value">
                            <a href="@Model.Project.ProjectUrl" target="_blank" class="text-decoration-none">
                                @Model.Project.ProjectUrl <i class="bi bi-box-arrow-up-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                }

                <div class="detail-row">
                    <div class="detail-label">Release Date</div>
                    <div class="detail-value">@Model.Project.ReleasedDate.ToString("MMMM dd, yyyy")</div>
                </div>

                <div class="d-flex gap-3 justify-content-end mt-4">
                    <a asp-page="./Index" class="btn btn-back">
                        Back to List
                    </a>
                    <a asp-page="./Edit" asp-route-id="@Model.Project.ProjectId" class="btn btn-edit-detail">
                        Edit Project
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>