@page
@model BolascoProel4.Pages.Projects.DeleteModel

@{
    ViewData["Title"] = "Delete Project";
}

<style>
    .delete-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 2rem 0;
        margin: -2rem -15px 2rem -15px;
        border-radius: 0 0 30px 30px;
    }

    .delete-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border: 3px solid #f5576c;
    }

    .warning-banner {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border-left: 5px solid #f59e0b;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .warning-icon {
        font-size: 3rem;
        color: #f59e0b;
    }

    .project-preview-card {
        background: #f7fafc;
        border: 2px solid #e2e8f0;
        border-radius: 15px;
        padding: 2rem;
        margin: 2rem 0;
    }

    .project-preview-image {
        max-height: 300px;
        width: auto;
        max-width: 100%;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        margin-bottom: 1.5rem;
    }

    .detail-row {
        padding: 1rem 0;
        border-bottom: 1px solid #e2e8f0;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-weight: 700;
        color: #f5576c;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        color: #2d3748;
        font-size: 1.1rem;
        margin-top: 0.3rem;
    }

    .btn-delete-confirm {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border: none;
        padding: 0.8rem 2.5rem;
        border-radius: 25px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(245, 87, 108, 0.4);
        transition: all 0.3s ease;
    }

        .btn-delete-confirm:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(245, 87, 108, 0.6);
            color: white;
        }

    .btn-cancel {
        background: white;
        color: #667eea;
        border: 2px solid #667eea;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #667eea;
            color: white;
        }
</style>

<div class="delete-header text-center">
    <div class="container">
        <h1 class="display-5 fw-bold">⚠️ Delete Project</h1>
        <p class="lead">Confirm project deletion</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="delete-card">
                <div class="warning-banner text-center">
                    <div class="warning-icon mb-2">⚠️</div>
                    <h4 class="mb-2" style="color: #92400e;"><strong>Warning!</strong></h4>
                    <p class="mb-0" style="color: #92400e;">
                        You are about to permanently delete this project. This action cannot be undone!
                    </p>
                </div>

                <h4 class="text-center mb-4" style="color: #2d3748;">
                    Are you sure you want to delete "<strong>@Model.Project.Title</strong>"?
                </h4>

                <div class="project-preview-card">
                    @if (Model.Project.ImageData != null && Model.Project.ImageData.Length > 0)
                    {
                        <div class="text-center">
                            <img src="@Url.Page("../Projects/Index", "Image", new { id = Model.Project.ProjectId })"
                                 class="project-preview-image"
                                 alt="@Model.Project.Title" />
                        </div>
                    }

                    <div class="detail-row">
                        <div class="detail-label">Project Title</div>
                        <div class="detail-value">@Model.Project.Title</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">Description</div>
                        <div class="detail-value">@Model.Project.Description</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Project.TechnologyUsed))
                    {
                        <div class="detail-row">
                            <div class="detail-label">Technologies Used</div>
                            <div class="detail-value">@Model.Project.TechnologyUsed</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Project.ProjectUrl))
                    {
                        <div class="detail-row">
                            <div class="detail-label">Project URL</div>
                            <div class="detail-value">
                                <a href="@Model.Project.ProjectUrl" target="_blank">
                                    @Model.Project.ProjectUrl
                                </a>
                            </div>
                        </div>
                    }

                    <div class="detail-row">
                        <div class="detail-label">Release Date</div>
                        <div class="detail-value">@Model.Project.ReleasedDate.ToString("MMMM dd, yyyy")</div>
                    </div>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Project.ProjectId" />

                    <div class="d-flex gap-3 justify-content-center mt-4">
                        <a asp-page="./Index" class="btn btn-cancel">
                            Cancel, Keep Project
                        </a>
                        <button type="submit" class="btn btn-delete-confirm">
                            Yes, Delete Permanently
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>